<?php

class Application_Form_Serlavcerrar extends Zend_Form
{

    public function init()
    {
        $this->setName('monto') //***crear cliente lavanderia
        ->setAction('cerrar2')
        ->setMethod('post')
        ->setAttrib('class', 'formulario');
        
	$this->addElement('text','monto', array('required' => false, 'label' => 'monto'));
	$this->addElement('hidden','id', array('required' => true, 'label' => ''));
	$this->addElement('submit', 'cerrar', array('label' => 'Cerrar'));
    }


}

