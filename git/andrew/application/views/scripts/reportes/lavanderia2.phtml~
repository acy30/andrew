<script type="text/javascript" charset="utf-8">
	$(document).ready(function() {
		data = <?php echo $this->json?>;

				//$('#tipo option:selected')[0].value
		var tds ="";
		var total = 0;
		for(i=0; i< data.length; i++){
			tds += '<tr>';
			tds += '<td>'+data[i][0]+'</td>';
			tds += '<td>'+data[i][2]+'</td>';
			tds += '<td>'+data[i][3]+'</td>';
			tds += '<td>'+data[i][4]+'</td>';
			total +=parseInt(data[i][4]);
		}
		$("#ordenes").append(tds);
		$("#total").text('Total: '+total+' Bsf');


	} );
</script>
<table id="ordenes" align="center" cellpadding="0" cellspacing="0">
		<tr>
			<td width="150px">Orden</td>
			<td width="150px">Fecha Llegada</td>
			<td width="150px">Fecha Salida</td>
			<td width="150px">Precio Subtotal</td>
		</tr>
</table>
